{
  "servers": [
    {
      "name": "server1",
      "listen": ["localhost:8080", "0.0.0.0:8081"],
      "max_body_size": 1000000,
      "error_pages": {
        "404": "/404.html"
      },
      "locations": [
        {
          "path": "/",
          "methods": ["GET", "POST"],
          "autoindex": true,
          "root": "/var/www",
          "index": "index.html",
          "cgi": {
            "ext": ".php",
            "path": "/usr/bin/php-cgi"
          },
          "error_pages": {
            "404": "/404.html"
          },
          "upload": {
            "path": "/tmp",
            "max_size": 1000000
          },
          "redirect": "https://www.example.com"
        }
      ]
    }
  ]
}